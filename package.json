{
  "name": "qa-automation-portfolio",
  "version": "1.0.0",
  "description": "Proyecto de portafolio que demuestra habilidades en QA Automation con aplicaci√≥n web completa y pruebas automatizadas",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "test": "npm run test:unit && npm run test:e2e && npm run test:api",
    "test:unit": "cd client && npm run test",
    "test:e2e": "playwright test",
    "test:api": "newman run tests/api/task-manager-api.postman_collection.json -r cli,html",
    "test:coverage": "cd client && npm run test:coverage",
    "demo:video": "playwright test tests/e2e/demo-video.spec.js --project=chromium --video=on",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "keywords": ["qa", "automation", "testing", "react", "nodejs", "playwright", "jest"],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "newman": "^4.6.1",
    "newman-reporter-html": "^1.0.5"
  }
} 